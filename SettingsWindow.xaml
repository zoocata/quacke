<Window x:Class="QuakeServerManager.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="300" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Settings" 
                   FontSize="20" FontWeight="Bold" 
                   Margin="0,0,0,20"/>
        
        <!-- Settings Content -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <GroupBox Header="Quake III Installation" Margin="0,0,0,15">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="Set the path to your Quake III installation folder. This path will be used for server deployments." 
                               TextWrapping="Wrap" Margin="0,0,0,10" Foreground="#666"/>
                    
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox Grid.Column="0" x:Name="Q3PathTextBox"
                                 Text="{Binding Q3Path, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,10,0" Padding="5,3" Height="30"
                                 VerticalContentAlignment="Center" FontSize="12"
                                 IsReadOnly="True">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <VisualBrush AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                                        <VisualBrush.Visual>
                                                            <TextBlock Text="No Q3 installation path set" 
                                                                       Foreground="Gray" 
                                                                       FontSize="12" 
                                                                       Margin="5,0,0,0"/>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                        
                        <Button Grid.Column="1" Content="Browse" Click="BrowseQ3Path_Click"
                                Padding="12,6" FontWeight="SemiBold" Height="30"/>
                    </Grid>
                    
                    <!-- Validation Status -->
                    <StackPanel Grid.Row="2" Margin="0,10,0,0">
                        <TextBlock Text="{Binding Q3ValidationMessage}" 
                                   Foreground="{Binding IsQ3PathValid, Converter={StaticResource BoolToColorConverter}}"
                                   FontSize="11" TextWrapping="Wrap"/>
                    </StackPanel>
                </Grid>
            </GroupBox>
        </StackPanel>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Click="Ok_Click" 
                    Background="#28A745" Foreground="White"
                    Padding="20,8" FontWeight="SemiBold" Height="35"
                    Margin="0,0,10,0"/>
            <Button Content="Cancel" Click="Cancel_Click"
                    Background="#6C757D" Foreground="White"
                    Padding="20,8" FontWeight="SemiBold" Height="35"/>
        </StackPanel>
    </Grid>
</Window> 